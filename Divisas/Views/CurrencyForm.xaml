<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.CurrencyForm"
             xmlns:vm="clr-namespace:Divisas.ViewModels"
             x:DataType="vm:NewCurrencyViewModel"
             Title="{Binding PageTitle}">
    <VerticalStackLayout Padding="15">
        
        <!--<Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />-->
        <ActivityIndicator 
            IsVisible="{Binding LoadingIsVisible}"
            IsRunning="{Binding LoadingIsVisible}"
            Color="Blue"
            HeightRequest="30"/>

        <Label Text="Nombre"/>
        <Entry Text="{Binding CurrencyDto.Name}" Margin="0,0,0,10"/>

        <Label Text="Tipo de Cambio"/>
        <Entry Text="{Binding CurrencyDto.ExchangeRate}" Keyboard="Numeric" Margin="0,0,0,10"/>

        <Label Text="Fecha Contrato"/>
        <DatePicker Date="{Binding CurrencyDto.Image}" Margin="0,0,0,10"/>

        <Button Text="Guardar" Command="{Binding GuardarCommand}" BackgroundColor="Green"/>


    </VerticalStackLayout>
</ContentPage>