<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Divisas"
       x:Class="Divisas.Views.PageSelector">

    <!-- Define el TabBar para el menú inferior -->
    <TabBar>
        <!-- Primera pestaña -->
        <Tab Title="Divisas"
             Icon="bolsa_de_dinero.png">
            <!-- Puedes usar un ícono -->
            <ShellContent ContentTemplate="{DataTemplate local:Views.CurrencyList}" />
        </Tab>

        <!-- Segunda pestaña -->
        <Tab Title="Conversión"
             Icon="convertir.png">
            <ShellContent ContentTemplate="{DataTemplate local:Views.Conversion}" />
        </Tab>

         <!--Tercera pestaña--> 
        <Tab Title="Configuracion"
             Icon="avatar_femenino.png">
            <ShellContent ContentTemplate="{DataTemplate local:Views.Settings}" />
        </Tab>
    </TabBar>
</Shell>
